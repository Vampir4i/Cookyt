<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/half_main_padding"
    android:id="@+id/cl_category"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bakery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/placeholder_image"
        android:layout_marginLeft="@dimen/main_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/main_padding"
        app:layout_constraintTop_toTopOf="@id/iv_bakery"
        app:layout_constraintBottom_toBottomOf="@id/iv_bakery"
        app:layout_constraintLeft_toRightOf="@id/iv_bakery"/>

</androidx.constraintlayout.widget.ConstraintLayout>