<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="isFavorite"
            type="Boolean" />

        <variable
            name="title"
            type="String" />

        <variable
            name="body"
            type="String" />

        <variable
            name="category"
            type="String" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.RecipeActivity">

        <ImageView
            android:id="@+id/video_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_play_arrow_24"
            android:backgroundTint="#99FFFFFF"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/video_img"
            app:layout_constraintBottom_toBottomOf="@id/video_img"
            app:layout_constraintLeft_toLeftOf="@id/video_img"
            app:layout_constraintRight_toRightOf="@id/video_img" />

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_share_24"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/video_img"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:text='@{category}'
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"
            android:background="@android:color/holo_orange_light" />
        
        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src='@{isFavorite ? @drawable/ic_baseline_bookmark_24 : @drawable/ic_baseline_bookmark_border_24}'
            app:layout_constraintTop_toBottomOf="@id/video_img"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:text='@{title}'
            app:layout_constraintTop_toBottomOf="@id/category_label"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp" />

        <TextView
            android:id="@+id/tv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_regular"
            android:text='@{body}'
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>